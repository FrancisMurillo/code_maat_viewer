{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "eslint:all",
        "plugin:react/all",
        "plugin:import/errors"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "globals": {
        "react": true
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "never"
            }
        ],
        "no-magic-numbers": [
            1,
            {
                "ignore": [0]
            }
        ],
        "padded-blocks": 0,
        "one-var": 0,
        "sort-imports": 0,
        "sort-keys": 0,
        "no-debugger": 2,
        "no-console": 2,
        "no-unused-vars": 1,
        "no-empty-pattern": 1,
        "no-extra-parens": [
            0,
            "all",
            {
                "ignoreJSX": "multi-line"
            }
        ],
        "object-curly-spacing": 0,
        "prefer-promise-reject-errors": 0,
        "prefer-destructuring": 0,
        "quotes": 1,
        "quote-props": 1,

        "react/display-name": 0,
        "react/jsx-sort-props": 0,
        "react/jsx-indent": 1,
        "react/jsx-indent-props": 1,
        "react/sort-prop-types": 0,
        "react/require-default-props": 0,
        "react/forbid-prop-types": 0,
        "react/jsx-no-bind": 0,
        "react/prop-types": 0,

        "react/jsx-filename-extension": 0
    }
}
